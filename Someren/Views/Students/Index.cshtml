@model List<Someren.Models.Student>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Students</h2>

<a class="btn btn-success mb-3" asp-action="Add">Add Student</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Student Number</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Class</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentNumber</td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.PhoneNumber</td>
                <td>@student.Class</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.StudentNumber" class="btn btn-warning btn-sm me-2">Edit</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="studentNumber" value="@student.StudentNumber" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
