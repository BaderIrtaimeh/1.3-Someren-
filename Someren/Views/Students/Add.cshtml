@model Someren.Models.Student
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Student</h2>

<form asp-action="Add" method="post">
    <div class="mb-2">
        <label asp-for="StudentNumber" class="form-label"></label>
        <input asp-for="StudentNumber" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="Class" class="form-label"></label>
        <input asp-for="Class" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Add Student</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
