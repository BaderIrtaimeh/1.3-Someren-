@model IEnumerable<Someren.Models.Activity>
@{
    ViewData["Title"] = "Activities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Activities</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Activity ID</th>
            <th>Name</th>
            <th>Date of activity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model)
        {
            <tr>
                <td>@activity.ActivityID</td>
                <td>@activity.Name</td>
                <td>@activity.Time.ToString("DD-MM-YYYY")</td>
                <td>
                <td>
                    <a asp-controller="Lecturers" asp-action="Participating" asp-route-id="@activity.ActivityID" class="btn btn-info btn-sm">
                        View Lecturers
                    </a>
                </td>
                </td>
            </tr>
        }
    </tbody>
</table>

