@model Someren.Models.Lecturer

@{
    ViewData["Title"] = "Add Lecturer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Lecturer</h2>


<form asp-action="Add" method="post">

    <div class="form-group mb-3">
        <label asp-for="LectureID" class="form-label"></label>
        <input asp-for="LectureID" class="form-control" />
        <span asp-validation-for="LectureID" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DateOfBirth" class="form-label"></label>
        <input asp-for="DateOfBirth" class="form-control" type="date" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Add Lecturer</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
