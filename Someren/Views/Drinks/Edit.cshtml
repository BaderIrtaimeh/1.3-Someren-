@model Someren.Models.Drink

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Drink";
}

<div class="container mt-4">
    <h2 class="mb-4">Edit Drink</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="DrinkID" />

        <div class="mb-3">
            <label class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">VAT Type</label>
            <select asp-for="VAType" class="form-select">
                <option value="None">0%</option>
                <option value="Low">9%</option>
                <option value="High">21%</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Stock</label>
            <input asp-for="Stock" type="number" class="form-control" min="0" />
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </form>
</div>
